<div class="container-fluid top-spacer">
	<div class="container" id="banned-container" ng-if="(CtrlBanned.renderBan)" ng-cloak>
		<div class="row">
			<div classs="col-md-12">
				<div class="row">
					<div class="col-md-3 col-sm-4 col-xs-12">
						<div class="banned-logo"></div>
					</div>
					<div class="col-md-9 col-sm-7 col-xs-12">
						<div class="banned-title">Banned</div>
						<hr/>
						<div class="banned-reason-text">Reason:</div>
						<div class="banned-reason" ng-bind="CtrlBanned.status.reason"></div>
						<div class="banned-date">
							Expires
							<time-ago from-time='{{::CtrlBanned.status.expiration}}'></time-ago>.
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>